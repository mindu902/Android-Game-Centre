<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mcstartorload"
    tools:context="fall18_207project.GameCenter.fall18_207project.MatchingCard.MCStartingActivity">

    <Button
        android:id="@+id/MCStart"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="117dp"
        android:background="@drawable/owstartgamebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MCLoad"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="117dp"
        android:background="@drawable/owloadgamebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MCStart" />

    <Button
        android:id="@+id/MCScordBoard"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="117dp"
        android:background="@drawable/owscoreboardbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MCLoad" />
</android.support.constraint.ConstraintLayout>
