<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameCenterActivity">

    <Button
        android:id="@+id/SlidingTilesButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/stbutton"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SimonButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/simonbutton"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MatchButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MatchButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/owbutton"
        app:layout_constraintStart_toEndOf="@+id/SlidingTilesButton"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="13dp"
        android:text="Silding Tiles"
        android:textAppearance="@android:style/TextAppearance.Theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SlidingTilesButton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="51dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="41dp"
        android:text="@string/simon"
        android:textAppearance="@android:style/TextAppearance.Theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/SimonButton" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="83dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="Overwatch Card Match"
        android:textAppearance="@android:style/TextAppearance.Theme"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/MatchButton" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="Choose A Game！"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="?android:attr/dialogPreferredPadding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>